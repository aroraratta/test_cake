<div class="container">
  <div class="customer-page">
    <div class="genre-index">
      <h3>ジャンル一覧</h3>
      <% @genres.each do |genre| %>
        <%= link_to genre.name %>
      <% end %>
    </div>
    <div class="mypage-edit">
      <div class="mypage-edit-title">
        会員情報編集
      </div>
      <div class="mypage-edit-form">
        <%= form_with model:@customer, url: public_customer_path do |f| %>
		    <%= render "layouts/errors", obj: @customer %>
          <table>
            <thead>
              <th></th>
              <th></th>
              <th></th>
            </thead>
            <tbody>
              <tr>
                <td>氏名</td>
                <td><%= f.label :last_name, "(名)" %><%= f.text_field :last_name, :placeholder =>"#{@customer.last_name}" %></td>
                <td><%= f.label :first_name, "(姓)" %><%= f.text_field :first_name, :placeholder =>"#{@customer.first_name}" %></td>
              </tr>
              <tr>
                <td>フリガナ</td>
                <td><%= f.label :first_name, "(姓)", class: "" %><%= f.text_field :first_name, :placeholder =>"#{@customer.first_name}" %></td>
                <td><%= f.label :last_name, "(名)", class: "" %><%= f.text_field :last_name, :placeholder =>"#{@customer.last_name}" %></td>
              </tr>
              <tr>
					      <td><%= f.label :email, "メールアドレス" %></td>
					      <td colspan="2"><%= f.text_field :postal_code, :placeholder =>"#{@customer.postal_code}", class: "" %></td>
              </tr>
              <tr>
					      <td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
					      <td colspan="2"><%= f.text_field :postal_code, :placeholder =>"#{@customer.postal_code}", class: "" %></td>
              </tr>
              <tr>
					      <td><%= f.label :address, "住所(郵便番号から自動入力)" %></td>
					      <td colspan="2"><%= f.text_field :adress, :placeholder =>"#{@customer.adress}", class: "" %></td>
              </tr>
              <tr>
                <td><%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)" %></td>
                <td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"#{@customer.telephone_number}" %></td>
              </tr>
            </tbody>
          </table>
          <%= f.submit "編集内容を保存する", class: "" %>
          <%= link_to "退会する", class: "" %>
        <% end %>
      </div>
    </div>
  </div>
</div>